<% include ./partials/header %>

<div class="container row">

		<!-- Detailed view -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user.id %><br>
						<strong>username</strong>: <%= user.username %><br>
						<form method="POST" action="/detail">
							
							<table>
								<tr>
									<th>Coin in</th>
									<th>Amount In</th>
									<th>Coin Out</th>
									<th>Amount Out</th>
									<th>TransType</th>
									<th>Actions</th>
								</tr>
								<% if (results){ %> 
									<% results.forEach(function(transaction){ %>
										<tr>
											<td><%= transaction.coinIn_id %></td>
											<td><%= transaction.amountIn %></td>
											<td><%= transaction.coinOut_id %></td>
											<td><%= transaction.amountOut %></td>
											<td><%= transaction.transType_id %></td>
										</tr>
									<% }) %>
								<% } %>
								<tr>
									<td><input type="number" name="coinIn"></td>
									<td><input type="number" name="amountIn"></td>
									<td><input type="number" name="coinOut"></td>
									<td><input type="number" name="amountOut"></td>
									<td><input type="number" name="transType"></td>

								</tr>
							</table>
							<button>submit</button>
							
						</form>

					</p>

			</div>
		</div>

	</div>

		
			

	
<% include ./partials/footer %>