<% include ./partials/header %>

<div class="container row">

		<!-- Detailed view -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user.id %><br>
						<strong>username</strong>: <%= user.username %><br>
						<a href="/addTrans">Add Transaction</a>
						<!-- <form method="POST" action="/detail"> -->
							
							<table>
								<tr>
									<th>Trans Id</th>
									<th>Coin in</th>
									<th>Amount In</th>
									<th>Coin Out</th>
									<th>Amount Out</th>
									<th>TransType</th>
									<th>Actions</th>
								</tr>
								<% if (results){ %> 
									<% results.forEach(function(transaction){ %>
										<tr>
											<td><%= transaction.transId %></td>
											<td><%= transaction.CoinIn %></td>
											<td><%= transaction.AmountIn %></td>
											<td><%= transaction.CoinOut %></td>
											<td><%= transaction.AmountOut %></td>
											<td><%= transaction.TransType %></td>
											<td>
												<form method="POST" action="/detail_delete">
												<button type='submit' name = 'transId' value=<%= transaction.transId %> >
													<i class="far fa-trash-alt" ></i>
												</button>
												</form>
											</td>
										</tr>
									<% }) %>
								<% } %>

							</table>
							
							
						<!-- </form> -->

					</p>

			</div>
		</div>

	</div>

		
			

	
<% include ./partials/footer %>